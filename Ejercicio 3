#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main(){
   int u,d,c,um,numero;
   cout<<"Ingrese el numero: ";
   cin>>numero;
   if(numero<10000){
    u=numero%10;
    numero=numero/10;
    d=(numero%10)*10;
    numero=numero/10;
    c=(numero%10)*100;
    um=(numero/10)*1000;
    cout<<"El numero contiene: "<<u<<" unidades + "<<d<<" decenas + "<<c<<" centenas + "<<um<<" unidades de mil";
     }else{
	 cout<<"El numero no puede ser mayor a 10000";
     }
 getch();
}
